        <Button x:Name="ButtonReverse" Content="Перевернуть" HorizontalAlignment="Center" Margin="0,385,0,0" VerticalAlignment="Top" Height="33" Width="104" Click="ButtonInverse_Click"/>
        <Label Content="Результат перестановки: " HorizontalAlignment="Left" Height="27" Margin="22,434,0,0" VerticalAlignment="Top" Width="148"/>
        <Label x:Name="OutputLabel" Content="" HorizontalAlignment="Left" Height="27
               " Margin="170,434,0,0" VerticalAlignment="Top" Width="688"/>
        <Label Content="Введите строку:" HorizontalAlignment="Left" Height="27" Margin="22,342,0,0" VerticalAlignment="Top" Width="97"/>
        <TextBox x:Name="InputStringReverse" HorizontalAlignment="Left" Height="27" Margin="119,342,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="849"/>
        <Label Content="Введите сторку, в которой слова разделены пробелом. Нажатие на кнопку выведет слова в обратном порядке." 
            HorizontalAlignment="Center" Height="27" Margin="0,298,0,0" VerticalAlignment="Top" Width="628"/>

    </Grid>
</Window>
