        <Button x:Name="ButtonSplit" Content="Разделить" HorizontalAlignment="Center" Margin="0,134,0,0" VerticalAlignment="Top" Height="33" Width="105" Click="ButtonSplit_Click"/>
        <ListBox x:Name="OutputList" d:ItemsSource="{d:SampleData ItemCount=0}" Margin="175,126,725,207"/>
